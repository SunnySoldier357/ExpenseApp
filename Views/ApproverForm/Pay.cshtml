@model ExpenseForm

@section Title { Expense Report Pay }

@section Header {
  <h1>Pay Expense Report</h1>
}

<form asp-controller="ApproverForm"
      asp-action="Pay">
  <h4>
    Please include the receipt number of the receipt use to pay this expense report.
  </h4>

  <div class="error-label"
       asp-validation-summary="ModelOnly"></div>

  @Html.HiddenFor(model => model.StatementNumber)

  <div class="input-container grid-item">
    <label class="label"
           asp-for="PaymentReceiptNumber"></label>
    <input class="input-field"
           asp-for="PaymentReceiptNumber"
           type="text" />
    <span class="error-label"
          asp-validation-for="PaymentReceiptNumber"></span>
  </div>

  <div class="button-group">
    <a class="button-secondary"
       href="@Url.Action("Details", "ApproverForm", new
        {
            statementNumber = Model.StatementNumber
        })">Cancel</a>
    <input class="button-primary"
           value="Mark as Paid"
           type="submit" />
  </div>
</form>