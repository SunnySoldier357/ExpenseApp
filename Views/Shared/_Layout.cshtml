<!doctype html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, initial-scale=1">
  <title>@RenderSection("Title", true)</title>

  <link rel="stylesheet"
        type="text/css"
        href="@Url.Content("~/css/MicrosoftTeams.min.css")">
  <link rel="stylesheet"
        type="text/css"
        href="@Url.Content("~/css/main.min.css")">

  <script src="@Url.Content("~/scripts/MicrosoftTeams.min.js")"
          type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/team.js")"
          type="text/javascript"></script>

  @RenderSection("Scripts", false)
</head>

<body class="theme-light">
  <div class="surface">
    <div class="panel">
      <div class="panel-header">
        @RenderSection("Header", false)
      </div>

      <div class="panel-body">
        @RenderBody()
      </div>
    </div>
  </div>
</body>

</html>