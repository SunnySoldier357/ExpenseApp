@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExpenseApp.Models.DB.Account

@{
  Layout = "_Layout";
}

@section Title { Account Create }

@section Header {
<h2>@Html.ActionLink("Admin", "Index", "Admin") > @Html.ActionLink("Accounts", "List", "Account") > Create Account</h2>
}

<h4>Account</h4>
<hr />
<form asp-controller="Account" 
      asp-action="Create">
  <div class="error-label"
       asp-validation-summary="ModelOnly"></div>

  <div class="input-container field-group">
    <label class="label"
           asp-for="Name"></label>
    <div>
      <input class="input-field"
             type="text"
             asp-for="Name" />
    </div>

    <span class="error-label"
          asp-validation-for="Name"></span>
  </div>

  <div class="button-group">
    <a class="button-secondary"
       href="@Url.Action("List", "Account")">Cancel</a>
    <button class="button-primary"
           type="submit">Create</button>
  </div>

</form>