@model ExpenseApp.Models.DB.Account

@section Title { Account Edit }

@section Header {
  <h1>@Html.ActionLink("Admin", "Index", "Admin") > @Html.ActionLink("Accounts", "List", "Account") > Edit Account</h1>
}

<h4>Account</h4>
<hr />
<form asp-controller="Account"
      asp-action="Edit">
  <div class="error-label"
       asp-validation-summary="ModelOnly"></div>

  <div class="input-container field-group">
    <label class="label"
           asp-for="Name"></label>
    <input class="input-field"
           asp-for="Name"
           type="text" />
    <span class="error-label"
          asp-validation-for="Name"></span>
  </div>

  <div class="button-group">
    <a class="button-secondary"
       href="@Url.Action("List", "Account")">Cancel</a>
    <button class="button-primary"
            type="submit">
      Save
    </button>
  </div>

</form>