@model Location

@section Title { Location Delete }

@section Header {
  <h1>@Html.ActionLink("Admin", "Index", "Admin") > @Html.ActionLink("Locations", "List", "Location") > Delete Location</h1>
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<h4>Location</h4>
<hr />

<form asp-controller="Location"
      asp-action="Delete">
  <div class="error-label"
       asp-validation-summary="ModelOnly"></div>

  <div class="input-container field-group">
    <label class="label"
           asp-for="Name"></label>
    <input class="input-field"
           asp-for="Name"
           type="text"
           readonly />
  </div>

  <div class="button-group">
    <a class="button-secondary"
       href="@Url.Action("List", "Location")">Cancel</a>
    <button class="button-primary"
            type="submit">
      Delete
    </button>
  </div>

</form>