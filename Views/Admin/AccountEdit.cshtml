@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExpenseApp.Models.DB.Account

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Title { Account Edit }

@section Header {
  <h2>Edit Account</h2>
}

<h4>Account</h4>
<hr />
<form asp-controller="Admin"
      asp-action="AccountEdit">
  <div class="error-label"
       asp-validation-summary="ModelOnly"></div>

  <div class="input-container field-group">
    <label class="label"
           asp-for="Name"></label>
    <div>
      <input class="input-field"
             type="text"
             asp-for="Name" />
    </div>

    <span class="error-label"
          asp-validation-for="Name"></span>
  </div>

  <div class="button-group">
    <a class="button-secondary"
       href="@Url.Action("AccountList", "Admin")">Cancel</a>
    <button class="button-primary"
            type="submit">
      Save
    </button>
  </div>

</form>