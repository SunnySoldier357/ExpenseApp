@model IEnumerable<ExpenseApp.Models.DB.Employee>

@{
  Layout = "_Layout";
}

@section Title { Approver List }

@section Header {
  <h1>Approvers</h1>
}

<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Approver)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Location)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.IsAnApprover)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Approver.Id)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.IsAnApprover)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>